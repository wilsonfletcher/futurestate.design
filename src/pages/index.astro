          <div class="lg:col-start-1 lg:col-end-7">
            <div
              class="prose prose-black lg:prose-xl leading-tight lg:leading-tight">
              <Home />
            </div>
          </div>
          <div class="lg:col-start-8 lg:col-end-12">
