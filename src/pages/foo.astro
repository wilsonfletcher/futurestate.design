---
import site from '@data/site'
import Container from '@components/Container.vue'
import { Hero } from '@components/index.astro'
import Default from '@layouts/Default.astro'
import { markWilson } from '@data/people'
// import { Content as MarkWilson } from '../content/people/mark-wilson.md'
// import SchemaWebPage from '../components/SchemaWebPage'
import SchemaPerson from '@components/SchemaPerson.astro'

const people = await Astro.glob('../content/people/mark-wilson.md')
const name = 'Foo'

const page = {
  name: 'Foo',
  description: 'Foo description',
  url: '/foo',
  image: {
    url: `${site.url}/images/closeup.jpg`
  }
}
---

<Default {...page} title="Foo">
  <SchemaPerson slot="head" givenName={markWilson.givenName} />
  <Hero {name} />
  <Container>
    <pre>{JSON.stringify(people, null, 2)}</pre>
  </Container>
</Default>
