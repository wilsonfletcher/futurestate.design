---
import H6 from './H6.vue'

interface Props {
  name: string
  description: string
}

const { name, description } = Astro.props
---

<div class="prose lg:prose-xl">
  <figure>
    <blockquote>
      <p set:html={description}></p>
    </blockquote>
    {name && <H6 as="figcaption">{name}</H6>}
  </figure>
</div>
