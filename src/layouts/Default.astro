---
import Header from '../containers/Header.astro'
import '@styles/global.css'

export interface Props {
  title?: string
}

const { title = 'Futurestate Design' } = Astro.props
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <link
      rel="preload"
      as="style"
      href="https://fonts.googleapis.com/css2?family=Libre+Franklin:wght@300;400;500;700;800;900&amp;display=swap"
    />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
  </head>
  <body>
    <div class="flex flex-col min-h-screen w-screen">
      <Header />
      <main class="flex-auto"><slot /></main>
    </div>
  </body>
</html>
