---
import site from '@/data/site.js'
import BaseHead from '../components/BaseHead.astro'
import Header from '@/components/Header.astro'
import Container from '@/components/Container.astro'
import Button from '@/components/Button.astro'
import H3 from '@/components/H3.astro'
import Footer from '@/components/Footer.astro'
import '@/styles/global.css'

interface Props {
  title: string
  description: string
  url: string
  image?: {
    url: string
  }
  schemaWebPage?: boolean
  mainEntity?: object
}

const {
  title,
  description,
  url = '/',
  image,
  schemaWebPage,
  mainEntity
} = Astro.props as Props
---

<html lang={site.lang}>
  <head>
    <BaseHead
      title={title}
      description={description}
      url={url}
      image={image}
      schemaWebPage={schemaWebPage}
      {mainEntity}
    />
    <slot name='head' />
  </head>
  <body>
    <div class='flex flex-col min-h-screen w-screen'>
      <Header />
      <main class='flex-auto'><slot /></main>
      <aside class='flex-none'>
        <img
          src='/images/closeup.jpg'
          class='w-full'
          loading='lazy'
          width='1440'
          height='233'
          alt=''
        />
        <div class='bg-grey-dark text-white py-12 lg:py-22'>
          <Container>
            <div class='grid gap-5 md:grid-cols-2'>
              <div>
                <H3>
                  <a
                    href='/'
                    rel='home'
                    class='bg-yellow text-grey-dark box-decoration-clone'
                    >Futurestate design</a
                  >
                </H3>
              </div>
              <div class='md:text-right'>
                <Button
                  as='a'
                  href='https://www.amazon.co.uk/dp/1399922106'
                  kind='yellow'
                  target='_blank'
                >
                  Buy the book on Amazon
                </Button>
              </div>
            </div>
          </Container>
        </div>
      </aside>
      <Footer />
    </div>
  </body>
</html>
